<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="web_maintenance_request_form" name="Maintenance Request Form">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <t t-if="submitted">
                    <h3 class="alert alert-success mt16 mb16">
                        <i class="fa fa-check-circle mr-2"/>
                        Maintenance Request submitted successfully
                    </h3>
                    <h1>Submit Another Maintenance Request</h1>
                </t>
                <t t-else="">
                    <h1>Submit Maintenance Request</h1>
                </t>
                <form method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" name="name" class="form-control" placeholder="Maintenance Request"
                               required=""/>
                    </div>
                    <div class="row">
                        <div class="col-lg-7 col-xl-6 mr-lg-auto">
                            <div class="form-group">
                                <label>Select Equipment</label>
                                <select class="form-control" name="equipment_id">
                                    <t t-foreach="equipments" t-as="equipment">
                                        <option t-att-value="equipment.id">
                                            <t t-esc="equipment.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Select Maintenance Type</label>
                                <select class="form-control" name="maintenance_type">
                                    <option value="corrective">Corrective</option>
                                    <option value="preventive">Preventive</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Select Maintenance Team</label>
                                <select class="form-control" name="maintenance_team_id">
                                    <t t-foreach="maintenance_teams" t-as="maintenance_team">
                                        <option t-att-value="maintenance_team.id">
                                            <t t-esc="maintenance_team.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Select Responsible User</label>
                                <select class="form-control" name="user_id">
                                    <t t-foreach="users" t-as="user">
                                        <option t-att-value="user.id">
                                            <t t-esc="user.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-7 col-xl-6 mr-lg-auto">
                            <div class="form-group">
                                <label>Schedule Date</label>
                                <input type="date" name="schedule_date" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label>Duration</label>
                                <div class="row">
                                    <div class="col-6">
                                        <input class="form-control oe_inline" name="duration"
                                               type="number" autocomplete="off" value="00.00"/>
                                    </div>
                                    <div class="col-6 d-flex align-items-center pl-0">
                                        <span>hours</span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Priority</label>
                                <select class="form-control" name="priority">
                                    <option value="0">Very Low</option>
                                    <option value="1">Low</option>
                                    <option value="2">Normal</option>
                                    <option value="3">High</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Notes</label>
                                <textarea name="issue_description" class="form-control"
                                          style="height: calc(1.5em + 0.75rem + 2px);" placeholder="Internal Notes"/>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mb-5" style="margin-left: 15px;">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </t>
    </template>


    <template id="website_customized_homepage" name="Website Customized Home" inherit_id="website.homepage">
        <xpath expr="//div[@id='wrap']" position="replace">
            <main>
                <div id="wrap" class="oe_structure oe_empty">
                    <div class="container text-center o_homepage_editor_welcome_message" style="min-height: 485.234px; padding-bottom:0;">
                        <h2 class="mt0">Most Sold
                            <b>Products</b>
                        </h2>
                        <p class="lead d-none d-md-block">These are the most sold products in our
                            <b>Collection</b>
                        </p>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div class="album">
                            <div class="container">
                                <div class="row">
                                    <t t-foreach="most_sold_products" t-as="website_product_id">

                                        <div class="col-4 mb-4">

                                            <div class="card shadow-sm">
                                                <t t-if="website_product_id['product']">
                                                    <div style="width:100%; height:225px;overflow: hidden;">
                                                        <img t-attf-src="data:image/png;base64,#{website_product_id['product']}"
                                                             class="img oe_product_image"
                                                             style="padding: 0px; margin: 0px; width:auto; height:100%;"/>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                                                     xmlns="http://www.w3.org/2000/svg" role="img"
                                                     aria-label="Placeholder: Thumbnail"
                                                     preserveAspectRatio="xMidYMid slice" focusable="false">
                                                    <title>Placeholder</title>
                                                    <rect width="100%" height="100%" fill="#55595c"></rect>
                                                </svg>
                                                </t>


                                                <div class="card-body">
                                                    <p class="card-text">
                                                        <t t-esc="website_product_id['name']"/>
                                                    </p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div class="btn-group">
                                                            <a t-attf-href="/shop/product/#{website_product_id['id']}">
                                                                <button type="button"
                                                                    class="btn btn-outline-secondary">
                                                                View
                                                            </button>
                                                            </a>

                                                        </div>
                                                        <small class="text-muted">sold :
                                                            <t t-esc="website_product_id['qty']"/>
                                                        </small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="wrap" class="oe_structure oe_empty">
                    <div class="container text-center o_homepage_editor_welcome_message" style="min-height: 485.234px;padding-top:20px;">
                        <h2 class="mt0">Most Viewed
                            <b>Products</b>
                        </h2>
                        <p class="lead d-none d-md-block">These are the most viewed products in our
                            <b>Collection</b>
                        </p>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div class="album">
                            <div class="container">
                                <div class="row">
                                    <t t-foreach="most_viewed_products" t-as="website_product_id_views">

                                        <div class="col-4 mb-4">

                                            <div class="card shadow-sm">
                                                <t t-if="website_product_id_views['product']">
                                                    <div style="width:100%; height:225px;overflow: hidden;">
                                                        <img t-attf-src="data:image/png;base64,#{website_product_id_views['product']}"
                                                             class="img oe_product_image"
                                                             style="padding: 0px; margin: 0px; width:auto; height:100%;"/>
                                                    </div>
                                                </t>
                                                <t t-else="">
                                                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                                                     xmlns="http://www.w3.org/2000/svg" role="img"
                                                     aria-label="Placeholder: Thumbnail"
                                                     preserveAspectRatio="xMidYMid slice" focusable="false">
                                                    <title>Placeholder</title>
                                                    <rect width="100%" height="100%" fill="#55595c"></rect>
                                                </svg>
                                                </t>


                                                <div class="card-body">
                                                    <p class="card-text">
                                                        <t t-esc="website_product_id_views['name']"/>
                                                    </p>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div class="btn-group">
                                                            <a t-attf-href="/shop/product/#{website_product_id_views['id']}">
                                                                <button type="button"
                                                                    class="btn btn-outline-secondary">
                                                                View
                                                            </button>
                                                            </a>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                    <br/>
                                    <hr class="border-600 s_hr_1px w-100 mx-auto s_hr_dotted"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </xpath>
    </template>
</odoo>