<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <label for="sale_ok" position="after">
                <div>
                    <field name="has_warranty"/>
                    <label for="has_warranty"/>
                </div>
            </label>
            <label for="purchase_ok" position="after">
                <group attrs="{'invisible': [('has_warranty', '=', False)]}">
                    <field name="warranty_no_of_days" attrs="{'required': [('has_warranty', '=', True)]}"/>
                    <field name="warranty_type" attrs="{'required': [('has_warranty', '=', True)]}" />
                </group>
            </label>
        </field>
    </record>



</odoo>