<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//tree/field[@name='product_uom_qty']"
                        position="after">
                    <field name="project_created" invisible="1"/>
                    <field name="mile_stone"
                           attrs="{'readonly': [('project_created', '=', True)]}"
                    />
                </xpath>
                <xpath expr="//button[@name='action_quotation_send']"
                        position="after">
                    <field name="project_created" invisible="1"/>
                    <button id="action_create_project"
                            name="action_create_project"
                            string="Create Project"
                            class="btn-primary"
                            type="object"
                            attrs="{'invisible': [('project_created', '=', True)]}"
                            confirm="Are you sure you want to create Milestone Project?"
                    />
                </xpath>
            </data>
        </field>
    </record>

</odoo>
