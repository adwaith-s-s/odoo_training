<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
    	<xpath expr="//WrappedProductNameLines" position="after">
            <t t-if="line.product_owner">
                <div class="pos-receipt-left-padding">
                    <span><b>Product Owner : </b></span>
                    <span><t t-esc="line.product_owner[1].substring(0, 18)"/></span>
                </div>
            </t>

            <t t-if="line.product_rating">
                <t t-if="line.product_rating==5">
                    <div class="pos-receipt-left-padding" style="font-size: 1rem;font-style: oblique;">
                        <span>Product Rating </span>
                        <i class="fa fa-star fa-fw"></i><i class="fa fa-star fa-fw"></i>
                        <i class="fa fa-star fa-fw"></i><i class="fa fa-star fa-fw"></i>
                        <i class="fa fa-star fa-fw"></i>
                    </div>
                </t>
                <t t-if="line.product_rating==4">
                    <div class="pos-receipt-left-padding" style="font-size: 1rem;font-style: oblique;">
                        <span>Product Rating </span>
                        <i class="fa fa-star fa-fw"></i><i class="fa fa-star fa-fw"></i>
                        <i class="fa fa-star fa-fw"></i><i class="fa fa-star fa-fw"></i>
                    </div>
                </t>
                <t t-if="line.product_rating==3">
                    <div class="pos-receipt-left-padding" style="font-size: 1rem;font-style: oblique;">
                        <span>Product Rating </span>
                        <i class="fa fa-star fa-fw"></i><i class="fa fa-star fa-fw"></i>
                        <i class="fa fa-star fa-fw"></i>
                    </div>
                </t>
                <t t-if="line.product_rating==2">
                    <div class="pos-receipt-left-padding" style="font-size: 1rem;font-style: oblique;">
                        <span>Product Rating </span>
                        <i class="fa fa-star fa-fw"></i><i class="fa fa-star fa-fw"></i>
                    </div>
                </t>
                <t t-if="line.product_rating==1">
                    <div class="pos-receipt-left-padding" style="font-size: 1rem;font-style: oblique;">
                        <span>Product Rating </span>
                        <i class="fa fa-star fa-fw"></i>
                    </div>
                </t>
            </t>

    	</xpath>
    </t>
</templates>